<h3><%= @conversation.title %></h3>
<% if @messages.count > 0 %>
	<% @messages.each do |message| %>
		<div class="message-author">
			<%= message.sender.name %>
			<%= image_tag message.sender.main_image, width: "50%" %>
		</div>
		<div class="messsage-body">
			<p><%= message.content %></p>
		</div>
	<% end %>
<% end %>

<br>
<%= link_to "Reply to user", new_conversation_message_path(@conversation) %> |
<%= link_to "Back", conversations_path %>
