<div class="search-wrap clearfix">
	<% if @query != nil %>
		<p class="query">Results for: <%= @query %></p>
	<% end %>

	<%= form_tag users_path, method: 'get', class: 'search-submit' do %>
		<%= text_field_tag :search, nil, placeholder: "enter a skill" %>
		<%= submit_tag "Search", name: nil %>
	<% end %>
</div>
