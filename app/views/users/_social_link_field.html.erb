<div class="social-field clearfix">
	<span class="link-name">
		<!-- fetch social media names from database-->
		<%= f.collection_select(:name, SocialLink.all.group(:name),:name, :name, {include_blank: true}, {multiple: false}) %>
	</span>

	<span class="link-path">
		<%#= f.label :url, class: 'control-label' %>
		<span class="controls">
			<%= f.text_field :url, placeholder: 'Add link path' %>
		</span>
	</span>
</div>