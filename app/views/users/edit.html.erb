<div class="row user-profile">
	<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
		<h1>Edit your profile</h1>

		<%= check_role %>

		<%= render partial: 'form', locals: {user: @user} %>
		<br>
		<% if @user.role != 'user' %>
			<%= link_to 'Back', user_path(@user) %>
		<% end %>
	</div>
</div>
