<%= form_for(user) do |f| %>

	<%= render partial: 'errors', locals: {user: user} %>

	<div class="field">
		<div class="control-group">
			<%= f.label :name, class: 'control-label' %>
			<div class="controls">
				<%= f.text_field :name %>
			</div>
		</div>
	</div><br>

	<div class="field">
		<div class="control-group">
			<%= f.label :email,class: 'control-label' %>
			<div class="controls">
				<%= f.text_field :email %>
			</div>
		</div>
	</div><br>

	<div class="field">
		<div class="control-group">
			<%= f.label :bio,class: 'control-label' %>
			<div class="controls">
				<%= f.text_area :bio %>
			</div>
		</div>
	</div><br>

	<div class="field">
		<div class="control-group">
			<%= f.label :role, "Specify the account type", class: 'control-label' %><br>
			<%= f.select :role, options_for_select([['Developer', 'developer'], ['Founder', 'founder']], selected: user.role), {include_blank: true} %>
		</div>
	</div><br>

	<div class="field">
		<strong class="control-label">Social Links</strong>
		<%= f.fields_for :social_links do |builder| %>
			<div class="control-group">
				<%= render partial: 'social_link_field', locals: {f: builder} %>
			</div><br>
		<% end %>

		<!--allow the user to add more social links-->
		<div class="control-group">
			<%= add_social_link_field 'Add Link', f, :social_links %>
		</div>

	</div>

	<div class="actions">
		<%= f.submit class: "btn btn-info btn-block" %>
	</div>

<% end %>