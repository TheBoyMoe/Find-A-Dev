<%= form_for(user) do |f| %>

	<%= render partial: 'errors', locals: {user: user} %>

	<div class="field">
		<div class="control-group">
			<%= f.label :name, class: 'control-label' %>
			<span class="controls">
				<%= f.text_field :name %>
			</span>
		</div>
	</div><br>

	<div class="field">
		<span class="control-group">
			<%= f.label :email,class: 'control-label' %>
			<span class="controls">
				<%= f.text_field :email %>
			</span>
		</span>
	</div><br>

	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>