<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name" %>
	</div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", placeholder: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
		<%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
		<% if @minimum_password_length %>
			<em class="bottom"><%= @minimum_password_length %> characters minimum</em>
		<% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-info btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
