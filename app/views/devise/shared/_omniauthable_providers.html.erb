<%- if devise_mapping.omniauthable? %>
	<div class="social">
		<%- resource_class.omniauth_providers.each do |provider| %>
			<%= link_to omniauth_authorize_path(resource_name, provider), class: "circle #{provider}" do %>
				<i class="fa fa-fw fa-<%= provider.downcase %>"></i><span>Sign in with <%=OmniAuth::Utils.camelize(provider)%></span>
			<%end%>
		<% end -%>
	</div>
<% end -%>